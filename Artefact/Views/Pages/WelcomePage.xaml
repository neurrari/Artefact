<Page x:Class="Artefact.Views.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Artefact.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Добро пожаловать в" FontSize="28" FontFamily="{StaticResource MediumFont}" Foreground="{StaticResource SecondaryBrush}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="/Images/rhombus.png" Width="50" Height="50" Margin="0 0 5 0"/>
                <TextBlock Text="АИС Артефакт" Foreground="{StaticResource SecondaryBrush}" FontSize="28" VerticalAlignment="Center" FontFamily="{StaticResource MediumFont}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
