<Window x:Class="Artefact.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Artefact"
        mc:Ignorable="d"
        Height="350" Width="500" AllowsTransparency="True" WindowStyle="None"
        WindowStartupLocation="CenterScreen" Background="Transparent">

    <Border CornerRadius="5" Background="{StaticResource WhitetBrush}" MouseDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--CONTROL BAR-->

            <Border Grid.Row="0" Background="#f2f2f2" MouseLeftButtonDown="Border_MouseLeftButtonDown" CornerRadius="5 5 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="270"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 5">
                        <Image Source="/Images/rhombus.png" Width="25" Height="20" Margin="5 0"/>
                        <TextBlock Text="АИС Артефакт" Foreground="{StaticResource SecondaryBrush}" FontSize="14" VerticalAlignment="Center" FontFamily="{StaticResource MediumFont}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <Button x:Name="closeBtn" Style="{StaticResource controlButon}" Click="closeBtn_Click">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial x:Name="closeIcon" Kind="Close" Style="{StaticResource controlButtonIcon}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <StackPanel Grid.Row="1" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <TextBlock Text="Добро пожаловать!"/>
                    </StackPanel>

                    <Border Grid.Row="1" Style="{StaticResource borderField}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Icon:PackIconMaterial Kind="Account" Style="{StaticResource iconHint}"/>
                            <TextBlock x:Name="loginBox" Text="Введите логин" Style="{StaticResource textHint}" MouseDown="loginBox_MouseDown"/>
                            <TextBox x:Name="tbLogin" TextChanged="tbLogin_TextChanged" Style="{StaticResource textField}"/>
                        </Grid>
                    </Border>

                    <Border Grid.Row="2" Style="{StaticResource borderField}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Icon:PackIconMaterial Kind="Lock" Style="{StaticResource iconHint}"/>
                            <TextBlock x:Name="passwordBox" Text="Введите пароль" Style="{StaticResource textHint}" MouseDown="passwordBox_MouseDown"/>
                            <PasswordBox x:Name="tbPassword" PasswordChanged="tbPassword_PasswordChanged" Style="{StaticResource textField}"/>
                        </Grid>
                    </Border>

                    <Button x:Name="loginBtn" Grid.Row="3" Margin="70 10" Style="{StaticResource colorButon}" Click="loginBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="Login" Margin="0 0 10 0" Height="20" Width="20"/>
                            <TextBlock Text="Войти" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Window>
