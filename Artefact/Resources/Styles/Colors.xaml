<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="PrimaryColor">#212730</Color>
    <Color x:Key="SecondaryColor">#787d85</Color>
    <Color x:Key="ThirdColor">#e6e6e6</Color>
    <Color x:Key="AccentColor">#01acb4</Color>
    <Color x:Key="AccentHoverColor">#0a9da4</Color>
    <Color x:Key="Red">#e41414</Color>
    <Color x:Key="RedHover">#d21c1c</Color>
    <Color x:Key="White">#fff</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="ThirdBrush" Color="{StaticResource ThirdColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource Red}"/>
    <SolidColorBrush x:Key="RedHoverBrush" Color="{StaticResource RedHover}"/>
    <SolidColorBrush x:Key="WhitetBrush" Color="{StaticResource White}"/>
</ResourceDictionary>